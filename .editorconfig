# EditorConfig: https://editorconfig.org

# 최상위 .editorconfig 파일
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{json,js,jsx,html,css}]
indent_style = space
indent_size = 2

[*.{py}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab 